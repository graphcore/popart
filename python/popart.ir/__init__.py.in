from popart.ir.ir import *
from popart.ir.tensor import *
from popart.ir.streams import *
from popart.ir.random_seed import *
from popart.ir.module import *
from popart.ir.remote_buffer import *
import popart.ir.transforms

del sys
del actualVersion
del requiredVersion
